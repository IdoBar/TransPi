/* ----------------------------------------

                Config File

   ----------------------------------------
*/
 
params {
    
    // Modify this accordingly
    cpus=10
    // RAM in Gb
    ramg=300
    // RAM in Mb
    ramm=300000
    // PATH to run analysis
    mypwd="CHANGE"
    // Uniport database PATH
    uniprot="CHANGE/uniprot-taxonomy_metazoaA33208.fasta"
    uniname="uniprot-taxonomy_metazoaA33208.fasta"
    // kmers list (depends on read length)
    k="25,37,45,53"
    // Directory for trace files
    tracedir="pipeline_info"

    // SOAP config file generator
    //#maximal read length
    max_rd_len="76"
    //[LIB]
    //#maximal read length in this lib
    rd_len_cutof="76"
    //#average insert size
    avg_ins="200"
    //#if sequence needs to be reversed 
    reverse_seq="0"
    //#in which part(s) the reads are used
    asm_flags="3"
    //#minimum aligned length to contigs for a reliable read location (at least 32 for short insert size)
    map_len="32"

    // --------------------------- Do not modify anything below this --------------------------- //
    // Programs not listed here are assume to be in the PATH
    //insilico_read_normalization
    in_norm="insilico_read_normalization.pl"
    //soap variable
    soap="SOAPdenovo-Trans-127mer"
    //velvet and oases variable
    vh="velveth"
    vg="velvetg"
    oa="oases"
    //trinity variable
    tr="Trinity"
    //BUSCO databse (metazoa)
    buscodb="CHANGE/metazoa_odb9"
    //Rnammer script from Trinotate
    rnaTri="RnammerTranscriptome.pl"
    //To extract from XML file
    XMLtoGO="extract_GO_assignments_from_Trinotate_xls.pl"
    //PFAM file location (gunzip first)
    //Check constantly for updates of pfam:ftp://ftp.ebi.ac.uk/pub/databases/Pfam/releases/"
    pfloc="CHANGE/Pfam-A.hmm"
    //name of pfam file
    pfname="Pfam-A.hmm"
    //Trinotate sqlite created when installing Trinotate
    Tsql="CHANGE/Trinotate.sqlite"
    //rnammer
    rnam="PATH/rnammer"
}

timeline {
  enabled = true
  file = "${params.tracedir}/tranpi_timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/tranpi_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/tranpi_trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/tranpi_dag.html"
}

process {
    withLabel: big_cpus {
        cpus='30'        
        memory='15 GB'  
        clusterOptions='-p lemmium --qos=normal'
        executor='slurm'
    }   
    withLabel: low_cpus {
        cpus='6'   
        memory='10 GB'
        clusterOptions='-p lemmium --qos=normal'
        executor='slurm'
    }
    withLabel: big_mem {
        cpus='20'   
        memory='350 GB'
        clusterOptions='-p lemmium --qos=normal'
        executor='slurm'
    }
    withLabel: med_mem {
        cpus='20'
        memory='200 GB'
        clusterOptions='-p lemmium --qos=normal'
        executor='slurm'
    }
        withLabel: med_mem2 {
        cpus='16'
        memory='93 GB'
        clusterOptions='-p nitrogen --qos=normal'
        executor='slurm'
    }
    withLabel: low_mem {
        cpus='20'
        memory='100 GB'
        clusterOptions='-p lemmium --qos=normal'
        executor='slurm'
    }
}
